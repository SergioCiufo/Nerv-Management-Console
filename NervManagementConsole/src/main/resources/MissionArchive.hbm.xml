<hibernate-mapping>
    <class name="com.company.nervManagementConsole.model.MissionArchive" table="MISSION_ARCHIVE">
        <id name="missionArchiveId" column="missionArchiveId">
            <generator class="identity"/>
        </id>
		
		 <many-to-one name="mission" column="missionId" class="com.company.nervManagementConsole.model.Mission" not-null="true"/>
        
        <!-- Codice missione -->
        <property name="missionCode" column="mission_code" not-null="true"/>
		
		<many-to-one name="user" column="userId" class="com.company.nervManagementConsole.model.User" not-null="true"/>
		<many-to-one name="member" column="memberId" class="com.company.nervManagementConsole.model.Member" not-null="true"/>

        <!-- Dettagli relativi al tempo e alle abilitÃ  -->
        <property name="startTime" column="startTime" not-null="true"/>
        <property name="endTime" column="endTime" not-null="true"/>
        <property name="tacticalAbility" column="tacticalAbility" not-null="true"/>
        <property name="synchRate" column="synchRate" not-null="true"/>
        <property name="supportAbility" column="supportAbility" not-null="true"/>

        <!-- Risultato missione -->

		<property name="result" column="result">
	    <type name="org.hibernate.type.EnumType">
		    <param name="enumClass">com.company.nervManagementConsole.model.MissionArchive$MissionResult</param>
		    <param name="enumtype">string</param>
		    <param name="useNamed">true</param>
	    </type>       
	  </property> 
        
    </class>
</hibernate-mapping>