<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name="com.company.nervManagementConsole.model.Mission" table="MISSION">
        <!-- Identificativo della missione -->
        <id name="missionId" column="missionId">
            <generator class="identity"/>
        </id>

        <!-- Informazioni della missione -->
        <property name="name" column="name" not-null="true"/>
        <property name="description" column="description" not-null="true"/>
        <property name="image" column="imageMission"/>
        <property name="participantsMax" column="participantsMax" not-null="true"/>
        <property name="level" column="levelMin" not-null="true"/>
        <property name="synchronizationRate" column="synchronizationRate" not-null="true"/>
        <property name="tacticalAbility" column="tacticalAbility" not-null="true"/>
        <property name="supportAbility" column="supportAbility" not-null="true"/>
        <property name="exp" column="exp" not-null="true"/>
        <property name="durationTime" column="durationTime" not-null="true"/>
		
		<!-- 
		        <one-to-many name="missionParticipants" class="MissionParticipants">
            <key column="missionId"/>
        </one-to-many>
		 -->
       

    </class>
</hibernate-mapping>