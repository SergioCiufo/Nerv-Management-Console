<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name="com.company.nervManagementConsole.model.SimulationParticipant" table="SIMULATION_PARTICIPANTS">
        <id name="simulationParticipantId" column="simulationParticipantId">
            <generator class="identity"/>
        </id>
        
        <!-- Relazione molti a uno con Simulation -->
        <many-to-one name="simulation" column="simulationId" class="com.company.nervManagementConsole.model.Simulation" not-null="true"/>
        
        <!-- Relazione molti a uno con User -->
        <many-to-one name="user" column="userId" class="com.company.nervManagementConsole.model.User" not-null="true"/>
        
        <!-- Relazione molti a uno con Member -->
        <many-to-one name="member" column="memberId" class="com.company.nervManagementConsole.model.Member" not-null="true"/>

        <property name="startTime" column="startTime"/>
        <property name="endTime" column="endTime"/>

    </class>
</hibernate-mapping>