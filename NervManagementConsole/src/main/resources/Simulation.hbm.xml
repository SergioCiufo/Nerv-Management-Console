<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>

    <class name="com.company.nervManagementConsole.model.Simulation" table="SIMULATIONS">
        <id name="simulationId" column="simulationId">
            <generator class="identity"/>
        </id>
        
        <property name="name" column="name"/>
		<property name="synchronizationRate" column="synchronizationRate"/>
		<property name="tacticalAbility" column="tacticalAbility"/>
        <property name="supportAbility" column="supportAbility"/>
        <property name="exp" column="exp"/>
        <property name="level" column="levelMin"/>
        <property name="durationTime" column="durationTime"/>

        
        <!--  Relazione uno a molti con SimulationParticipant -->
               
        <bag name="simulationParticipants" table="SIMULATION_PARTICIPANTS" fetch="select">
            <key column="simulationId"/>
            <one-to-many class="com.company.nervManagementConsole.model.SimulationParticipant"/>
        </bag>
        

    </class>
</hibernate-mapping>