<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping>
    <class name="com.company.nervManagementConsole.model.UserMembersStats" table="USERMEMBERS_STATS">
        <id name="idMemberStats" column="idMemberStats">
            <generator class="identity"/>
        </id>
         <!-- Attributi di foreign key -->
        <many-to-one name="user" column="userId" class="com.company.nervManagementConsole.model.User" />
        <many-to-one name="member" column="memberId" class="com.company.nervManagementConsole.model.Member" />
        
        <!-- Attributi extra -->
        <property name="level" column="levelPg"/>
        <property name="exp" column="exp"/>
        <property name="synchronizationRate" column="synchronizationRate"/>
        <property name="tacticalAbility" column="tacticalAbility"/>
        <property name="supportAbility" column="supportAbility"/>
        <property name="status" column="status"/>
    </class>
</hibernate-mapping>